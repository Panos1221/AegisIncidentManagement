<UserControl x:Class="AegisDispatcher.Controls.IncidentsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">

    <UserControl.Resources>
        <!-- Incident Card Style -->
        <Style x:Key="IncidentCard" TargetType="Border">
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="BorderBrush" Value="#FF626262"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="4" Opacity="0.5" BlurRadius="8"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="1" Opacity="0.4" BlurRadius="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PriorityBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Text Styles -->
        <Style x:Key="IncidentTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="IncidentDetail" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style x:Key="IncidentTime" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF999999"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="IncidentsContainer" Margin="5">
                <!-- Incidents will be dynamically added here -->
                
                <!-- Loading Indicator -->
                <Border x:Name="LoadingIndicator" Style="{StaticResource IncidentCard}" 
                       Visibility="Visible" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â—" Foreground="#FF007ACC" FontSize="16" Margin="0,0,10,0">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock Text="Loading incidents..." Foreground="#FFCCCCCC" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- No Incidents Message -->
                <Border x:Name="NoIncidentsMessage" Style="{StaticResource IncidentCard}" 
                       Visibility="Collapsed" HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No active incidents" Foreground="#FFCCCCCC" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="All clear for now" Foreground="#FF999999" 
                                  FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border x:Name="ErrorMessage" Style="{StaticResource IncidentCard}" 
                       Visibility="Collapsed" Background="#FF5A1E1E" BorderBrush="#FFCC0000">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Error Loading Incidents" Foreground="#FFFF6B6B" 
                                  FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="ErrorText" Text="" Foreground="#FFCCCCCC" 
                                  FontSize="11" TextWrapping="Wrap"/>
                        <Button x:Name="RetryButton" Content="Retry" Margin="0,10,0,0" 
                               Background="#FF007ACC" Foreground="White" BorderThickness="0"
                               Padding="8,4" HorizontalAlignment="Left" Cursor="Hand"
                               Click="RetryButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
