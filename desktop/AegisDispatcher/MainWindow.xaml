<Window x:Class="AegisDispatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AegisDispatcher"
        xmlns:controls="clr-namespace:AegisDispatcher.Controls"
        mc:Ignorable="d"
        Title="AegisDispatcher - Emergency Response Command Center" 
        Icon="pack://application:,,,/Resources/Icons/AppIcons/AppIcon_circle.ico"
        Height="900" Width="1400" 
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Panel Styles -->
        <Style x:Key="PanelBorder" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="PanelHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Splitter Style -->
        <Style x:Key="CustomSplitter" TargetType="GridSplitter">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="BorderBrush" Value="#FF626262"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="SizeWE"/>
        </Style>
    </Window.Resources>

    <!-- Keyboard shortcuts handled by KeyDown event in code-behind -->

    <DockPanel LastChildFill="True">
        <!-- Menu Bar -->
        <Border DockPanel.Dock="Top" Background="#FF1E1E1E" BorderBrush="#FF3F3F46" 
                BorderThickness="0,0,0,1" Height="50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <Border Width="32" Height="32" CornerRadius="16" Background="Transparent" Margin="0,0,10,0">
                        <Image Source="pack://application:,,,/Resources/Icons/AppIcons/AppIcon_circle_32x32.png" 
                               Width="32" Height="32" 
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AegisDispatcher" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="Emergency Response Command Center" Foreground="#FFCCCCCC" FontSize="10"/>
                    </StackPanel>
                </StackPanel>

                <!-- Menu Items -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <Button Content="New Incident (Ctrl+N)" Style="{StaticResource MenuButton}" 
                            Click="NewIncident_Click"/>
                    <Button Content="Refresh (F5)" Style="{StaticResource MenuButton}" 
                            Click="Refresh_Click"/>
                </StackPanel>

                <!-- User Info and Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <StackPanel x:Name="UserInfoPanel" VerticalAlignment="Center" Margin="0,0,15,0">
                        <TextBlock x:Name="UserNameText" Foreground="White" FontSize="13" 
                                  FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,0,0,2"/>
                        <TextBlock x:Name="AgencyNameText" Foreground="#FFCCCCCC" FontSize="11" 
                                  HorizontalAlignment="Right"/>
                    </StackPanel>
                    <Button Content="Logout" Style="{StaticResource MenuButton}" 
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#FF1E1E1E" BorderBrush="#FF3F3F46" 
                BorderThickness="0,1,0,0" Height="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Grid.Column="0" Text="Ready" 
                          Foreground="#FFCCCCCC" FontSize="11" 
                          VerticalAlignment="Center" Margin="10,0"/>

                <ProgressBar x:Name="StatusProgressBar" Grid.Column="1" 
                            Height="8" Margin="10,0" Visibility="Collapsed"
                            Background="#FF3C3C3C" Foreground="#FF007ACC"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                    <Border x:Name="ConnectionStatus" Width="8" Height="8" 
                           CornerRadius="4" Background="#FF28A745" Margin="0,0,5,0"/>
                    <TextBlock x:Name="ConnectionText" Text="Connected" 
                              Foreground="#FFCCCCCC" FontSize="11" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TimeText" Foreground="#FFCCCCCC" FontSize="11" 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with Three Panels -->
        <Grid Background="#FF252526">
            <Grid.ColumnDefinitions>
                <!-- Incidents Panel - 30% -->
                <ColumnDefinition Width="3*" MinWidth="350"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Map Panel - 50% -->
                <ColumnDefinition Width="5*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Actions & Resources Panel - 20% -->
                <ColumnDefinition Width="2*" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Incidents List -->
            <Border Grid.Column="0" Style="{StaticResource PanelBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Incidents Panel Header -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="Active Incidents" Style="{StaticResource PanelHeader}"/>
                        
                        <!-- Filters and Search -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <ComboBox x:Name="StatusFilterCombo" Width="120" Margin="0,0,10,0"
                                 Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF626262"
                                 SelectionChanged="StatusFilter_Changed">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <Border x:Name="Border" 
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="3">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                Grid.Column="0"
                                                                                IsHitTestVisible="False"
                                                                                Content="{TemplateBinding SelectionBoxItem}"
                                                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                Margin="3,3,23,3"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"/>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                            Grid.Column="0"
                                                                            Grid.ColumnSpan="2"
                                                                            Focusable="false"
                                                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                            ClickMode="Press"
                                                                            Background="Transparent"
                                                                            BorderBrush="Transparent"/>
                                                                <Path x:Name="Arrow"
                                                                    Grid.Column="1"
                                                                    Fill="White"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                            </Grid>
                                                        </Border>
                                                        <Popup x:Name="Popup"
                                                               Placement="Bottom"
                                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                                               AllowsTransparency="True"
                                                               Focusable="False"
                                                               PopupAnimation="Slide">
                                                            <Grid x:Name="DropDown"
                                                                  SnapsToDevicePixels="True"
                                                                  MinWidth="{TemplateBinding ActualWidth}"
                                                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                <Border x:Name="DropDownBorder"
                                                                        Background="#FF3C3C3C"
                                                                        BorderThickness="1"
                                                                        BorderBrush="#FF626262"/>
                                                                <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                </ScrollViewer>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="#FF3C3C3C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#FF626262"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter Property="Background" Value="#FF007ACC"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>

                                <ComboBoxItem Content="All Status" IsSelected="True"/>
                                <ComboBoxItem Content="Created"/>
                                <ComboBoxItem Content="OnGoing"/>
                                <ComboBoxItem Content="PartialControl"/>
                                <ComboBoxItem Content="Controlled"/>
                                <ComboBoxItem Content="FullyControlled"/>
                                <ComboBoxItem Content="Closed"/>
                            </ComboBox>

                            <TextBox x:Name="SearchBox" Width="150" 
                                    Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF626262"
                                    Text="Search incidents..." GotFocus="SearchBox_GotFocus"
                                    LostFocus="SearchBox_LostFocus" TextChanged="SearchBox_TextChanged"/>
                        </StackPanel>
                        
                        <!-- Incident Count -->
                        <TextBlock x:Name="IncidentCountText" Text="Loading incidents..." 
                                  Foreground="#FFCCCCCC" FontSize="11"/>
                    </StackPanel>

                    <!-- Incidents List -->
                    <Border Grid.Row="1" Background="Transparent">
                        <controls:IncidentsPanel x:Name="IncidentsPanel"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Splitter 1 -->
            <GridSplitter Grid.Column="1" Style="{StaticResource CustomSplitter}"/>

            <!-- Middle Panel: Map View -->
            <Border Grid.Column="2" Style="{StaticResource PanelBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Map Panel Header -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Incident Map View" Style="{StaticResource PanelHeader}"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="MapFiltersButton" Content="🔍 Filters" 
                                       Style="{StaticResource MenuButton}" 
                                       Click="MapFilters_Click"
                                       ToolTip="Open Advanced Map Filters"/>
                                <Button x:Name="MapViewToggleButton" Content="🛰️" 
                                       Style="{StaticResource MenuButton}" 
                                       Click="MapViewToggle_Click"
                                       ToolTip="Switch to Street View"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Map Content -->
                    <Border Grid.Row="1" Background="Transparent">
                        <controls:MapPanel x:Name="MapPanel"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Splitter 2 -->
            <GridSplitter Grid.Column="3" Style="{StaticResource CustomSplitter}"/>

            <!-- Right Panel: Actions & Resources -->
            <Border Grid.Column="4" Style="{StaticResource PanelBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Resources Panel Header -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="Resources and Actions" Style="{StaticResource PanelHeader}"/>
                    </StackPanel>

                    <!-- Resources Content -->
                    <Border Grid.Row="1" Background="Transparent">
                        <controls:ActionResourcesPanel x:Name="ActionResourcesPanel"/>
                    </Border>

                    <!-- Quick Action Buttons -->
                    <StackPanel Grid.Row="2" Margin="10">
                        <Button x:Name="NewIncidentBtn" Content="🚨 New Incident" 
                               Background="#FF28A745" Foreground="White" BorderThickness="0"
                               Padding="10,8" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,0,5"
                               Click="NewIncident_Click"/>
                        <Button x:Name="AssignSelectedBtn" Content="➤ Assign Selected" 
                               Background="#FF007ACC" Foreground="White" BorderThickness="0"
                               Padding="10,8" FontWeight="SemiBold" Cursor="Hand"
                               Click="AssignSelected_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Map Filters Popup - Using Popup for guaranteed top-level rendering -->
            <Popup x:Name="MapFiltersPopup" 
                   Placement="Center"
                   PlacementTarget="{Binding ElementName=MapPanel}"
                   AllowsTransparency="True"
                   StaysOpen="False"
                   PopupAnimation="Fade">
                <Border Background="#E0000000" 
                        Padding="20"
                        CornerRadius="0">
                    <Border Background="#FF1F2937" 
                            CornerRadius="12"
                            MaxWidth="350"
                            MaxHeight="600">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="10" Opacity="0.7" BlurRadius="15"/>
                        </Border.Effect>
                        <controls:MapFiltersPanel x:Name="MapFiltersPanel"
                                                 FilterChanged="MapFiltersPanel_FilterChanged"
                                                 CloseRequested="MapFiltersPanel_CloseRequested"/>
                    </Border>
                </Border>
            </Popup>
        </Grid>
    </DockPanel>
</Window>
